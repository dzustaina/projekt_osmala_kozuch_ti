@model IEnumerable<podejsciedwa.Models.DbModels.Biblioteka>

@{
    ViewBag.Title = "Index";
}

<h2>Lista bibliotek</h2>

<p>
    @Html.ActionLink("Dodaj nową bibliotekę", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.BibliotekaId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.BibliotekaId }) |
            @Html.ActionLink("Usuń bibliotekę", "Delete", new { id=item.BibliotekaId })
        </td>
    </tr>
}

</table>
